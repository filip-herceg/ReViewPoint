{
    "name": "reviewpoint-frontend",
    "version": "0.1.0",
    "description": "Modern React frontend for ReViewPoint with Vite, TypeScript, security, observability, and microfrontend readiness.",
    "author": "ReViewPoint team",
    "license": "MIT",
    "private": true,
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "type-check": "tsc --noEmit",
        "lint": "biome check .",
        "format": "biome format .",
        "test": "vitest --run",
        "test:e2e": "playwright test --no-open",
        "test:coverage": "vitest run --coverage",
        "analyze": "vite build --plugin rollup-plugin-visualizer",
        "audit": "pnpm audit --audit-level=moderate",
        "prepare": "husky install"
    },
    "dependencies": {
        "@radix-ui/react-slot": "^1.2.3",
        "@sentry/react": "^9.35.0",
        "@sentry/tracing": "^7.120.3",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "dompurify": "^3.2.6",
        "lucide-react": "^0.525.0",
        "plausible-tracker": "^0.3.9",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "tailwind-merge": "^3.3.1",
        "web-vitals": "^5.0.3"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.0.6",
        "@originjs/vite-plugin-federation": "^1.4.1",
        "@playwright/test": "^1.53.2",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.3.0",
        "@types/jest": "^30.0.0",
        "@types/react": "^19.1.8",
        "@types/react-dom": "^19.1.6",
        "@types/testing-library__react": "^10.2.0",
        "@vitejs/plugin-react": "^4.6.0",
        "autoprefixer": "^10.4.21",
        "biome": "^0.3.3",
        "husky": "^8.0.0",
        "jsdom": "^26.1.0",
        "playwright": "^1.53.2",
        "postcss": "^8.5.6",
        "rollup-plugin-visualizer": "^6.0.3",
        "tailwindcss": "^4.1.11",
        "tw-animate-css": "^1.3.5",
        "typescript": "^5.8.3",
        "vite": "^7.0.2",
        "vite-plugin-bundle-analyzer": "^0.0.1",
        "vite-plugin-csp": "^1.1.2",
        "vitest": "^3.2.4"
    }
}